<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_bookmark_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/activity_add_bookmark_dialog_container_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_add_bookmark_dialog_container_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/activity_add_bookmark_dialog_container_path_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Путь"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_add_bookmark_dialog_container_path_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp" />

</LinearLayout>
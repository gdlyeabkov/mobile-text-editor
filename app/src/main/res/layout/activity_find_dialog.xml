<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_find_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/activity_find_dialog_container_find_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Найти:" />

    <EditText
        android:id="@+id/activity_find_dialog_container_find_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/activity_find_dialog_container_replace_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заменить на:" />

    <EditText
        android:id="@+id/activity_find_dialog_container_replace_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/activity_find_dialog_container_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Учитывать регистр" />

    <CheckBox
        android:id="@+id/activity_find_dialog_container_regex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регулярное выражение" />

    <CheckBox
        android:id="@+id/activity_find_dialog_container_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зациклить поиск" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>